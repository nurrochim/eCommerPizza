<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/main_menu_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_weight="0.5"
            android:padding="3dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_radius_layout"
            >
            <RelativeLayout
                android:id="@+id/layout_menu_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/loading"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_menu_name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Beef Rendang"
                        android:gravity="center"
                        android:background="@color/material_grey_50"
                        android:alpha="0.8" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_harga"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="Rp. 105.000,00"
                        android:gravity="center"
                        android:background="@color/material_grey_50"
                        android:alpha="0.8"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingTop="5dp">
            <View style="@style/Divider"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="left|center"
                android:weightSum="1"
                android:background="@drawable/shape_layout_menu">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/text_detail"
                    android:text="Change Password"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_weight="0.5"

                    />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_red_A400"
                android:text="Add To Cart"
                android:textStyle="bold"
                android:id="@+id/add_to_cart"
                android:layout_marginTop="10px"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>